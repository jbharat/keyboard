# :: default
# close focused window
# alt - w : chunkc tiling::window --close

################## FOCUS WINDOW START ################################################
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east
################# FOCUS WINDOW END ###################################################

################## WINDOW START ###################################################
# swap window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move window
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east
################## WINDOW END ###################################################

################## RESIZE START ###################################################
# increase region size
ctrl + alt - a : yabai -m window --resize left:-20:0
ctrl + alt - s : yabai -m window --resize bottom:0:20
ctrl + alt - w : yabai -m window --resize top:0:-20
ctrl + alt - d : yabai -m window --resize right:20:0

# decrease region size
ctrl + alt + shift - a : yabai -m window --resize left:20:0
ctrl + alt + shift - s : yabai -m window --resize bottom:0:-20
ctrl + alt + shift - w : yabai -m window --resize top:0:20
ctrl + alt + shift - d : yabai -m window --resize right:-20:0
################## RESIZE END ###################################################

################## DESKTOP START ###############################################
# create desktop, move window and follow focus
cmd + alt - n : yabai -m space --create;\
                  id=$(yabai -m query --displays --display | grep "spaces");\
                  yabai -m window --space $(echo ${id:10:${#id}-10});\
                  yabai -m space --focus $(echo ${id:10:${#id}-10})

# # create desktop and follow focus
# cmd + alt - n : chunkc tiling::desktop --create;\
#                   id=$(chunkc tiling::query --desktops-for-monitor $(chunkc tiling::query --monitor-for-desktop $(chunkc tiling::query --desktop id)));\
#                   chunkc tiling::window --send-to-desktop $(echo ${id##* });\
#                   chunkc tiling::desktop --focus $(echo ${id##* })

# destroy desktop
cmd + alt - w : yabai -m space --destroy

# fast focus desktop
alt - 0 : yabai -m space --focus recent
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# send window to desktop and follow focus
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space 9; yabai -m space --focus 9

################## DESKTOP END ###############################################

# equalize size of windows
shift + alt - 0 : yabai -m space --balance

# rotate tree
alt - r : yabai -m space --rotate 90

# mirror tree y-axis is
alt - y : yabai -m space --mirror y-axis

# mirror tree x-axis is
alt - x : yabai -m space --mirror x-axis

# toggle desktop offset
alt - a : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

# toggle window parent zoom
alt - d : yabai -m window --toggle zoom-parent

# toggle window split type
alt - e : yabai -m window --toggle split

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle sticky
alt - s : yabai -m window --toggle sticky

# # toggle sticky, float and resize to picture-in-picture size
alt - p : yabai -m window --toggle sticky;\
          yabai -m window --grid 5:5:4:0:1:1

# change layout of desktop
cmd + alt - a : yabai -m space --layout bsp
cmd + alt - d : yabai -m space --layout float

# apps
cmd + ctrl - a : open -a /Applications/Spotify.app
cmd + ctrl - b : open -a /Applications/Firefox.app
cmd + ctrl - c : open -a /Applications/Slack.app
cmd + ctrl - d : open -a ~/Applications/Chrome\ Apps.localized/Todoist.app
cmd + ctrl - e : open -a /Applications/Emacs.app
cmd + ctrl - f : open -a /System/Library/CoreServices/Finder.app
cmd + ctrl - g : open -a /Applications/Canary\ Mail.app
cmd + ctrl - i : open -a /Applications/IntelliJ\ IDEA\ CE.app
cmd + ctrl - n : open -a /Applications/Notion.app
cmd + ctrl - p : open -a ~/Applications/Chrome\ Apps.localized/Google\ Calendar.app
cmd + ctrl - s : open -a /Applications/Safari.app
cmd + ctrl - t : open -a /Applications/Alacritty.app
cmd + ctrl - v : open -a /Applications/Visual\ Studio\ Code.app
cmd + ctrl - w : open -a /Applications/Twitterrific.app
cmd + ctrl - x : open -a /Applications/Trello.app

# '-' char
# toggle bluetooth headset
cmd + ctrl - 0x1B : BluetoothConnector 70-26-05-0f-ff-f3g

# '=' char
# lungo
cmd + ctrl - 0x18 : open -g 'lungo:toggle'

# '\' char
:: passthrough
cmd + ctrl - 0x2A ; passthrough
passthrough < cmd + ctrl - 0x2A ; default

# '"' char
# reload yabai 
cmd + ctrl - 0x27 : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# '?' char
# toggle border
cmd + ctrl - 0x2C : yabai -m window --toggle border